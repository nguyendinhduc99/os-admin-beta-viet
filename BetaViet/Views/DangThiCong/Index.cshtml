@model IEnumerable<BetaViet.Models.DangThiCong>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Danh sách</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table" id="dt-opt">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.LoaiDuAn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TienDoThiCong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiDuAn2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TienDoThiCong2)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.DoiThiCong)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.PropertiesJSON)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FiltersJSON)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.CreatedOn.GetValueOrDefault().FormatDateTime()
            </td>
            <td>
                @item.ModifiedOn.GetValueOrDefault().FormatDateTime()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
                <div>
                    <a href="https://betaviet.com.vn/du-an-thi-cong/@item.Slug" target="_blank">https://betaviet.com.vn/du-an-thi-cong/@item.Slug</a>
        </div>
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.LoaiDuAn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TienDoThiCong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiDuAn2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TienDoThiCong2)
            </td>*@
            @*<td>
                @if (item.DoiThiCong != null)
                {
                    <span>@Html.DisplayFor(modelItem => item.DoiThiCong.Name)</span>
                }
            </td>*@

            <td>
                @foreach (var x in item.Properties)
                {
                    <p>
                        <span>@x.Name</span>
                        <b>@x.Value</b>
                    </p>
                }

            </td>
            <td>
                @foreach (var x in item.Filters)
                {
                    <p>
                        <span>@x.Name</span>
                        <b>@string.Join(", ", x.Value)</b>
                    </p>
                }

            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
        }
    </tbody>
</table>
