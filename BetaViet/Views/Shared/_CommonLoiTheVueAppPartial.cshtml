                    $("[name=ContentJSON]").val(JSON.stringify(this.submittingImageSctions));
                },
                onImageSectionAdded() {
                    if (!this.addingImageSection.title.trim()) {
                        showNotification('Bạn nhập thiếu giá trị')
                        return;
