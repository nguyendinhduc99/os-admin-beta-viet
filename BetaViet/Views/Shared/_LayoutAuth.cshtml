    <link rel="shortcut icon" href="./template/demo/app/assets/images/logo/favicon.png">

    <!-- plugins css -->
    <link rel="stylesheet" href="./template/demo/bower_components/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="./template/demo/bower_components/PACE/themes/blue/pace-theme-minimal.css" />
