    <script src="./template/demo/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="./template/demo/bower_components/PACE/pace.min.js"></script>
    <script src="./template/demo/bower_components/perfect-scrollbar/js/perfect-scrollbar.jquery.js"></script>
    <!-- endbuild -->
    <!-- build:js /template/demo/app/assets/js/app.min.js -->
    <!-- core js -->
    <script src="./template/demo/app/assets/js/app.js"></script>
    <!-- endbuild -->
    <!-- page js -->
    @RenderSection("Scripts", required: false)
