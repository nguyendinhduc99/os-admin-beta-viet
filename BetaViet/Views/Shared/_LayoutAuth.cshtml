    <!-- core css -->
    <link href="./template/demo/app/assets/css/ei-icon.css" rel="stylesheet">
    <link href="./template/demo/app/assets/css/themify-icons.css" rel="stylesheet">
    <link href="./template/demo/app/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="./template/demo/app/assets/css/animate.min.css" rel="stylesheet">
