@model IEnumerable<BetaViet.Models.BoLoc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageTitle {
    <h4>Danh sách bộ lọc</h4>
}


<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Page)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Values)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dropdown)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DropdownValues)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Page)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @string.Join(", ", item.Values)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dropdown)
            </td>
            <td>
                @(item.DropdownValues != null ? string.Join(", ", item.DropdownValues) : "")
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
        }
    </tbody>
</table>
